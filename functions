function _listHelper() {
    result=$(ls -hF --group-directories-first $2 --color=always $1 \
             | egrep $3 --color=never '^d' | egrep -v '^total')
    if [[ -n $result ]]; then echo $result; fi
}

function ldir() { 
    _listHelper "$1" '-l' 
} 

function lldir() { 
    _listHelper "$1" '-la' 
} 

function lf() { 
    _listHelper "$1" '-l' '-v' 
}

function llf() { 
    _listHelper "$1" '-la' '-v' 
}

