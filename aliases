# custom commands
alias rdsktp="rdesktop -g 100% -PKD -k de -z -x l -r sound:off"
alias alsaeq="alsamixer -D equal"
# reset urxvt terminal
alias cls="echo -ne '\033c'"

# git (further aliases in gitconfig)
alias g="git"

# modified commands
alias diff='colordiff'              # requires colordiff package
alias grep='grep --color=auto'
alias more='less'
alias df='df -h -x tmpfs -x devtmpfs -x rootfs'
alias di='di -ss -x tmpfs,run'
alias du='du -c -h'
alias mkdir='mkdir -p -v'
alias ping='ping -c 5'
alias ..='cd ..'
alias h='history'

# ls
alias ls='ls -lhF --color=auto --time-style=long-iso'
alias l='ls -H --group-directories-first'
alias ll='ls -HA --group-directories-first'
alias lz='ls -HAS'
alias lt='ls -HAt'

# vim: set filetype=sh:
