#!/bin/bash

# custom commands
alias newalias="$EDITOR ~/.bash/aliases"
alias matlab="/opt/matlab/bin/matlab -nosplash -nodesktop"
alias rdsktp="rdesktop -g 100% -PKD -k de -z -x l -r sound:off"

# git
alias gst="git status --short"
alias gc="git commit"
alias ga="git add"
alias gl="git log --stat"
alias gpl="git pull"
alias gps="git push"

# modified commands
alias diff='colordiff'              # requires colordiff package
alias grep='grep --color=auto'
alias more='less'
alias df='df -h -x tmpfs -x devtmpfs -x rootfs'
alias di='di -ss -x tmpfs,run'
alias du='du -c -h'
alias mkdir='mkdir -p -v'
alias ping='ping -c 5'
alias ..='cd ..'
alias h='history'

#ls
alias ls='ls -hF --group-directories-first --color=auto'
alias l='ls -l'
alias ll='ls -la'
alias lx='ll -BX'       # sort by extension
alias lz='ll -rS'       # sort by size
alias lt='ll -rt'       # sort by date
